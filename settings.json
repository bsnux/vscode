// Place your settings in this file to overwrite the default settings
{
    //"editor.fontFamily": "'Inconsolata-dz for Powerline', 'Inconsolata-g for Powerline', DroidSansMonoForPowerline",
    //"editor.fontFamily": "Consolas",
    "editor.fontFamily": "Menlo",
    "editor.fontSize": 11.5,
    "editor.tabCompletion": true,
    "editor.rulers": [80],
    "python.linting.lintOnTextChange": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/node_modules/**": true,
        "**/.build/**": true,
        "**/env/**": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.build/**": true,
        "**/env/**": true,
        "**/project/source/**": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "**/.pyc": true,
        "**/project/.pyc": true,
        "**/project/**/.pyc": true,
        "**/.build": true,
        "**/node_modules": true,
        "**/node_modules_docker": true
    },
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "yapf",
    "files.trimTrailingWhitespace": true,
    "window.zoomLevel": 0
}